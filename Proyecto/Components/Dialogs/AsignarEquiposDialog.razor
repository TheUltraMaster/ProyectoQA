@using BD.Models
@using Proyecto.Services
@inject IEquipoService EquipoService
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6" Class="mb-3">
            Asignar @EquipoIds.Count equipo(s) a un empleado
        </MudText>

        <MudAutocomplete T="Empleado"
                         @bind-Value="empleadoSeleccionadoObj"
                         SearchFunc="BuscarEmpleado"
                         Label="Buscar empleado por nombre, apellido o ID"
                         Variant="Variant.Outlined"
                         Required="true"
                         Disabled="isLoading"
                         ToStringFunc="@(e => e == null ? "" : $"{e.PrimerNombre} {e.SegundoNombre} {e.PrimerApellido} {e.SegundoApellido}".Trim())"
                         ResetValueOnEmptyText="true"
                         CoerceText="false"
                         Clearable="true">
            <ItemTemplate Context="empleado">
                <MudText>
                    <b>ID:</b> @empleado.Id - @empleado.PrimerNombre @empleado.SegundoNombre @empleado.PrimerApellido @empleado.SegundoApellido
                </MudText>
            </ItemTemplate>
        </MudAutocomplete>

        @if (isLoading)
        {
            <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="mt-3" />
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Disabled="isLoading">Cancelar</MudButton>
        <MudButton Color="Color.Success"
                   Variant="Variant.Filled"
                   OnClick="Asignar"
                   Disabled="@(empleadoSeleccionadoObj == null || isLoading)">
            Asignar
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public List<int> EquipoIds { get; set; } = new();

    private List<Empleado> empleados = new();
    private Empleado? empleadoSeleccionadoObj;
    private bool isLoading = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            empleados = await EquipoService.GetEmpleadosAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error al cargar empleados: {ex.Message}", Severity.Error);
        }
    }

    private async Task<IEnumerable<Empleado>> BuscarEmpleado(string searchString, CancellationToken cancellationToken)
    {
        await Task.Yield(); // Para evitar warnings de async

        if (string.IsNullOrWhiteSpace(searchString))
            return empleados;

        return empleados.Where(e =>
        {
            // Búsqueda por ID
            if (e.Id.ToString().Contains(searchString, StringComparison.OrdinalIgnoreCase))
                return true;

            // Búsqueda por nombre
            if (!string.IsNullOrEmpty(e.PrimerNombre) && e.PrimerNombre.Contains(searchString, StringComparison.OrdinalIgnoreCase))
                return true;

            if (!string.IsNullOrEmpty(e.SegundoNombre) && e.SegundoNombre.Contains(searchString, StringComparison.OrdinalIgnoreCase))
                return true;

            // Búsqueda por apellido
            if (!string.IsNullOrEmpty(e.PrimerApellido) && e.PrimerApellido.Contains(searchString, StringComparison.OrdinalIgnoreCase))
                return true;

            if (!string.IsNullOrEmpty(e.SegundoApellido) && e.SegundoApellido.Contains(searchString, StringComparison.OrdinalIgnoreCase))
                return true;

            // Búsqueda por nombre completo
            var nombreCompleto = $"{e.PrimerNombre} {e.SegundoNombre} {e.PrimerApellido} {e.SegundoApellido}".Trim();
            if (nombreCompleto.Contains(searchString, StringComparison.OrdinalIgnoreCase))
                return true;

            return false;
        }).ToList();
    }

    private async Task Asignar()
    {
        if (empleadoSeleccionadoObj == null)
        {
            Snackbar.Add("Debe seleccionar un empleado", Severity.Warning);
            return;
        }

        isLoading = true;
        try
        {
            var success = await EquipoService.AsignarEquiposAsync(EquipoIds, empleadoSeleccionadoObj.Id);
            if (success)
            {
                MudDialog.Close(DialogResult.Ok(true));
            }
            else
            {
                Snackbar.Add("Error al asignar equipos", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            isLoading = false;
        }
    }

    private void Cancel() => MudDialog.Cancel();
}
