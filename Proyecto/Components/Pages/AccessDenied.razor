@page "/AccessDenied"
@layout Proyecto.Components.Layout.EmptyLayout

<PageTitle>Acceso Denegado</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="d-flex align-center justify-center" Style="height: 100vh;">
    <MudCard Class="pa-6" Style="width: 100%; max-width: 400px;">
        <MudCardContent>
            <MudStack AlignItems="AlignItems.Center" Spacing="3">
                <MudIcon Icon="@Icons.Material.Filled.Block" Size="Size.Large" Color="Color.Error" />
                <MudText Typo="Typo.h4" Align="Align.Center" Color="Color.Error">
                    Acceso Denegado
                </MudText>
                <MudText Typo="Typo.body1" Align="Align.Center">
                    No tienes permisos para acceder a esta página.
                </MudText>
                <MudButton Href="/login" 
                          Variant="Variant.Filled" 
                          Color="Color.Primary" 
                          StartIcon="@Icons.Material.Filled.Login">
                    Iniciar Sesión
                </MudButton>
            </MudStack>
        </MudCardContent>
    </MudCard>
</MudContainer>